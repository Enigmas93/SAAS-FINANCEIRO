{
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/build",
  "functions": {
    "api/index.py": {
      "runtime": "python@3.9",
      "excludeFiles": "{frontend,*.md,.git,.gitignore,docker-compose.yml,render.yaml,deploy*.ps1,backend/init.sql,**/__pycache__,**/*.pyc,**/.pytest_cache,**/tests,**/*.log,requirements.txt}/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ]
}