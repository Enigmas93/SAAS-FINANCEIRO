# Variáveis de Ambiente para Produção no Render
# IMPORTANTE: Este arquivo é apenas um template. 
# As variáveis reais serão configuradas no painel do Render.

# ===== CONFIGURAÇÕES DO BANCO DE DADOS =====
# Será automaticamente preenchida pelo Render
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# ===== CONFIGURAÇÕES DE AUTENTICAÇÃO =====
# Chave secreta para JWT (será gerada automaticamente pelo Render)
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== CONFIGURAÇÕES DO AMBIENTE =====
ENVIRONMENT=production
DEBUG=false

# ===== CONFIGURAÇÕES DO FRONTEND =====
# URL do backend (será automaticamente configurada pelo Render)
REACT_APP_API_URL=https://seu-backend.onrender.com
REACT_APP_ENVIRONMENT=production
GENERATE_SOURCEMAP=false

# ===== CONFIGURAÇÕES DE EMAIL (Opcional) =====
# Configure se você quiser notificações por email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
SMTP_FROM=seu-email@gmail.com

# ===== CONFIGURAÇÕES DE PAGAMENTO (Stripe) =====
# Configure quando implementar pagamentos
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===== CONFIGURAÇÕES DE LOGS =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== CONFIGURAÇÕES DE CORS =====
ALLOWED_ORIGINS=https://seu-frontend.onrender.com,https://seu-dominio.com

# ===== CONFIGURAÇÕES DE RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=60

# ===== CONFIGURAÇÕES DE BACKUP =====
# Para backups automáticos (se implementado)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *